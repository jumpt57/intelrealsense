<Window x:Class="SondageInteractifv2.views.popups.ErrorPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SondageInteractifv2.views.popups"
        mc:Ignorable="d"
        Title="Sondage Interactif - Erreur" Height="125" Width="270" ResizeMode="NoResize">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>
                <TextBlock x:Name="ErrorMsg" Text="..." TextWrapping="WrapWithOverflow">
                </TextBlock>
            </Label>
            <Button x:Name="CloseBtn" Content="Fermer" HorizontalAlignment="Right"  Width="75" Click="CloseBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>
